# Build tools function: Upload TM secrets to S3
# Dependencies: aws, TM_LOCAL_DEV_PATH environment variable
# Purpose: Upload secrets to S3 bucket
# Usage: upload-tm-secret [secretfile]

upload-tm-secret() {
  source "${TM_LOCAL_DEV_PATH}/common.sh"
  local secretfile=${1:-secrets.json}
  aws-tm
  echo "Writing new secrets."
  aws s3 cp $secretfile s3://$AWS_SECRET_PATH
  rm $secretfile
}
