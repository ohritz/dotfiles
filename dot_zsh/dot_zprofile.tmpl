#!/usr/bin/env zsh

# XDG base directories (defaults if not set)
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}"

# Environment for tools that should be available to all descendants
export DOTNET_ROOT=/usr/share/dotnet

# PATH setup for login shells (unique entries)
typeset -U path
path=(
    "$HOME/bin"
    "$HOME/.local/bin"
    {{- if .chezmoi.config.data.ismsys2 }}
    # Windows program paths
    "/c/nvm4w/nodejs"
    "/c/Program Files/Microsoft SDKs/Azure/CLI2/wbin"
    "/c/Program Files/dotnet"
    "/c/Program Files/GitHub CLI"
    "/c/Program Files/Docker/Docker/resources/bin"
    "/c/Users/sofe/AppData/Local/Programs/Microsoft VS Code/bin"
    "/c/Users/sofe/AppData/Local/Programs/cursor/resources/app/bin"
    {{ end -}}
    {{- if or .chezmoi.config.data.iswsl .chezmoi.config.data.islinux}}
    "$HOME/.dotnet/tools"
    "${ASDF_DATA_DIR:-$HOME/.asdf}/shims"
    "$HOME/go/bin"
    "/usr/local/go/bin"
    "$HOME/.yarn/bin"
    "$HOME/.config/yarn/global/node_modules/.bin"
    "$BUN_INSTALL/bin"
    {{ end -}}
    $path
)

# Core editors/pagers for login shells
export EDITOR="code"
export SUDO_EDITOR="nano"
export PAGER=less
export LESS=-R

# History format for all processes
export HIST_STAMPS="dd.mm.yyyy"

# eza universal Dracula colors (environment variable for all processes)
export EZA_COLORS="\
uu=36:\
uR=31:\
un=35:\
gu=37:\
da=2;34:\
ur=34:\
uw=95:\
ux=36:\
ue=36:\
gr=34:\
gw=35:\
gx=36:\
tr=34:\
tw=35:\
tx=36:\
xx=95:"
