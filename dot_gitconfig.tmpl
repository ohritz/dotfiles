[user]
	name = Sohan Fernando
	email = sohan@graceful.nu
[core]
	editor = code --wait
	autocrlf = input
	fsmonitor = true
	pager = delta
{{- if .chezmoi.config.data.ismsys2 }}
	trustctime = false
	filemode = false
	sshCommand = C:/WINDOWS/System32/OpenSSH/ssh.exe
{{- end }}
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
	# dark = true      # or light = true, or omit for auto-detection
	side-by-side = true
	line-numbers = true
	hyperlinks = true
	hyperlinks-file-link-format = "vscode://file/{path}:{line}"
[diff]
	tool = default-difftool
	colorMoved = zebra
[difftool "default-difftool"]
	cmd = code --wait --diff $LOCAL $REMOTE
[push]
	default = current
[color]
	ui = true
[merge]
	tool = code
    conflictstyle = zdiff3
[mergetool "code"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
	keeptemporaries = false
	keepbackups = false
	prompt = true
	trustexitcode = false
[grep]
    lineNumber = true
    patternType = perl
[commit]
	gpgsign = true
[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	c = commit
	st = status -sb
	b = branch
	nottracked = ls-files --others
	unstage = reset HEAD --
	dc = diff --cached
	fap = fetch -a -p
	# lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lgva = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lgv = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	lgh = !git --no-pager log --oneline --graph --decorate --all --color=always | head -n 15
[rerere]
	enabled = true
[pager]
    log = true
	branch = false
[pull]
	rebase = true
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = master
[gpg]
