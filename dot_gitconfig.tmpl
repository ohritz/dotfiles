[user]
	name = Sohan Fernando
	email = sohan@graceful.nu
[core]
	editor = code --wait
	autocrlf = input
	sshCommand = ssh.exe
[diff]
    tool = default-difftool
	colorMoved = zebra
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[commit]
	gpgsign = true
[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	c = commit
	st = status -sb
	b = branch
	riom = rebase -i origin/master
	nottracked = ls-files --others
	unstage = reset HEAD --
	dc = diff --cached
	fap = fetch -a -p
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg3 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	lgh = !git --no-pager log --oneline --graph --decorate --all --color=always | head -n 15
[rerere]
	enabled = true
[pager]
	branch = false
[pull]
	rebase = true
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = master
[push]
	default = current
[gpg]
  format = ssh
